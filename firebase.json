{
  "hosting": {
    "public": "build",
    "rewrites": [
      {
        "source": "/api/**",
        "function":"apiserver"
      },
      {
        "source":"**",
        "destination":"/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source" : "functions"
  }
}
